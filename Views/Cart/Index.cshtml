@model AppOrmEntity.Models.ShoppingCart

<h2>Your Cart</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.BookName</td>
                        <td>@item.Price $</td>
                        <td>
                            <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                <input type="number" name="quantity" value="@item.Quantity" class="form-control d-inline" style="width: 60px;" />
                                <input type="hidden" name="bookId" value="@item.BookId" />
                                <button type="submit" class="btn btn-info btn-sm">Update</button>
                            </form>
                        </td>
                        <td>@(item.Price * item.Quantity) $</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="bookId" value="@item.BookId" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" class="text-right"><strong>Total Price</strong></td>
                    <td><strong>@Model.Items.Sum(i => i.Price * i.Quantity) $</strong></td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Your cart is empty.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Items.Any())
{
    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
}
